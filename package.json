{
  "name": "hello-xd-vue",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "npm run clean && npm run watch:*",
    "watch:webpcack": "nodemon -w src -e js,vue,css -w webpack.config.js -x yarn build",
    "build": "npm run clean && webpack --mode development && copy:* && xdpm install ./dist",
    "watch:plugin": "xdpm watch ./dist",
    "clean": "rimraf ./dist",
    "watch:manifest": "cpx ./manifest.json ./dist --watch",
    "copy:manifest": "cpx ./manifest.json ./dist"
  },
  "license": "none",
  "private": true,
  "devDependencies": {
    "cpx": "^1.5.0",
    "vue-loader": "^15.2.6",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "css-loader": "^1.0.0",
    "style-loader": "^0.22.0",
    "vue": "^2.5.17",
    "vue-template-compiler": "^2.5.17"
  }
}
